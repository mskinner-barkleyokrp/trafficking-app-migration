<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- 
          Rule 1: Ignore requests for actual files or folders.
          This prevents the rule from redirecting requests for your CSS, JS, or image files.
        -->
        <rule name="React-Router-Ignore-Files" stopProcessing="true">
          <match url="." />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="None" />
        </rule>
        <!-- 
          Rule 2: For everything else, rewrite the URL to the root index.html file.
          This is the magic that lets React Router handle routes like /login, /dashboard, etc.
        -->
        <rule name="React-Router-Rule" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>